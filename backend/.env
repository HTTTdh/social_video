# App
APP_NAME=Social Automation API
APP_ENV=dev
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=INFO
API_V1_PREFIX=
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql+psycopg://thinh:123456@localhost:5433/social_automation

# Auth / JWT
JWT_SECRET=change_this_super_secret_key
JWT_ALG=HS256
JWT_EXPIRE_MINUTES=1440

# Storage
MEDIA_ROOT=./storage
MEDIA_PUBLIC_URL=/media

# Queue / Scheduler (tuỳ chọn)
REDIS_URL=redis://localhost:6379/0
RQ_QUEUES=default,high,low
SCHEDULER_TZ=Asia/Ho_Chi_Minh

# Observability (tuỳ chọn)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# --- META (Facebook & Instagram) ---
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_REDIRECT_URI="http://localhost:8000/api/oauth/facebook/callback"

# --- TIKTOK ---
TIKTOK_CLIENT_KEY=""
TIKTOK_CLIENT_SECRET=""
TIKTOK_REDIRECT_URI="http://localhost:8000/api/oauth/tiktok/callback"

# --- GOOGLE (YouTube) ---
YOUTUBE_CLIENT_ID=""
YOUTUBE_CLIENT_SECRET=""
YOUTUBE_REDIRECT_URI="http://localhost:8000/oauth/youtube/callback"

